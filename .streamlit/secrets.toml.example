# Streamlit Secrets Configuration Example
# Copy this file to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to version control!

[broker]
# MQTT Broker Configuration
host = "your-mqtt-broker.com"
port = 8883
use_tls = true
username = "your-username"
password = "your-password"

[mapbox]
# Mapbox API Key for map visualization
api_key = "your-mapbox-api-key"

[database]
# Database configuration (optional overrides)
db_path = "data/secure_config.db"

[app]
# Application settings
title = "Mowbot Fleet Dashboard"
description = "AGV Fleet Management System"
version = "1.0.0"

# Security settings
session_timeout = 3600  # 1 hour in seconds
max_login_attempts = 5
password_min_length = 8

[logging]
# Logging configuration
level = "INFO"
file_path = "logs/app.log"
max_file_size = "10MB"
backup_count = 5
